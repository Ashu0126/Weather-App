            <input type="text" placeholder="Enter the city name (eg. London)" />
            <button>
              <img
                src="https://icon-library.com/images/svg-search-icon/svg-search-icon-9.jpg"
                alt=""
              />
            </button>
          </div>
        </div>
        <div id="temp">
          <h1>12Â°</h1>
          <h3>Cloudy</h3>
          <div>
            <p class="humidity">Humidity 64%</p>
            <hr />
            <p class="speed">Wind 12k/m</p>
          </div>
        </div>
      </main>
      <footer>
        <p>Copyright &copy; Created by Ashish</p>
      </footer>
    </section>
